<html>
  <head>
    <title>MIEA</title>

    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery-1.4.2.js" %>
    <%= javascript_include_tag "calendar_date_select" %>
    <%= calendar_date_select_includes params[:style]%>
    
    <script>
     $j = jQuery.noConflict();

   </script>

    <%= stylesheet_link_tag "default" %>
    <%= stylesheet_link_tag "sexy_flash" %>
        
    <div id="header">
      <div id="logo">
        <h1><%= link_to "MIEA", root_path %> </h1>
        <%#*<h2><a href="http://www.freecsstemplates.org/">By Free CSS Templates</a></h2>%>
      </div>
      <div id="menu">
        <ul>
          <%= content_tag(:li, link_to("Home", root_path), :class=>(request.path == root_path) ? "current_page_item" : nil) if request.path != root_path %>
          <%= content_tag(:li, link_to("Income", income_path), :class=>(request.path == income_path) ? "current_page_item" : nil)  %>
          <%= content_tag(:li, link_to("Expense", expense_path), :class=>(request.path == expense_path) ? "current_page_item" : nil)  %>
          <%= content_tag(:li, link_to("Balance", view_balance_book_path), :class=>(request.path == view_balance_book_path) ? "current_page_item" : nil)  %>
          <%= content_tag(:li, link_to("Twitter Data", twitterdata_path), :class=>(request.path == twitterdata_path) ? "current_page_item" : nil)  %>
          <%#*<li><a href="#">Contact</a></li>%>
        </ul>
      </div>
    </div>

  </head>
  
  <body>

    <div id="page">

      <%= yield %>

    </div>
    <br /><br />
    <div id="footer">
      <p id="legal">&copy;2007 Boorish. All Rights Reserved. | Designed by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a></p>
      <p id="links"><%= link_to("Logout", logout_path) if logged_in? %></p>
    </div>
    
  </body>
  
</html>